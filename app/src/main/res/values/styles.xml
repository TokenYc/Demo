<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="transparent" parent="AppTheme" >
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/SlideTheme</item>
    </style>

    <style name="SlideTheme" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_in_a</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_in_a</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_out_a</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out_a</item>
    </style>
</resources>
